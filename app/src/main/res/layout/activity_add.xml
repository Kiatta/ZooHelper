<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4B0082">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить новое животное"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Имя животного"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Вес животного"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Возраст животного"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/editTextHabitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Место обитания животного"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="8dp"/>

    <Switch
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:scrollbarSize="48dp"
        android:showText="true"
        android:splitTrack="false"
        android:text="Статус животного"
        android:textColor="#FFFFFF"
        android:textOff="Здоровый"
        android:textOn="Больной"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPhotoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ссылка на фотографию животного"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/buttonAddAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить животное"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B0000"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
